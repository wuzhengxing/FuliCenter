<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <include layout="@layout/common_title"
        android:id="@+id/include"
        />
   <View
       android:id="@+id/iv"
       android:layout_below="@id/include"
       android:layout_width="match_parent"
       android:layout_height="3dp"
       android:background="#c4bfbf"/>
   <LinearLayout
       android:gravity="center_vertical"
       android:layout_below="@id/iv"
       android:id="@+id/layout_user_name"
       android:layout_width="match_parent"
       android:layout_height="50dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="收货人:"
           android:textSize="20sp"
           />
       <EditText
           android:id="@+id/ed_user_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="张三"
           android:textSize="20sp"
           />
   </LinearLayout>
    <View
        android:id="@+id/iv1"
        android:layout_below="@id/layout_user_name"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#c4bfbf"/>
   <LinearLayout
       android:gravity="center_vertical"
       android:id="@+id/layout_phone"
       android:layout_below="@id/iv1"
       android:layout_width="match_parent"
       android:layout_height="50dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="手机号码:"
           android:textSize="20sp"
           />
       <EditText
           android:id="@+id/ed_phone_number"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="18772101776"
           android:textSize="20sp"
           />
   </LinearLayout>
    <View
        android:id="@+id/iv2"
        android:layout_below="@id/layout_phone"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#c4bfbf"/>
   <LinearLayout
       android:layout_marginTop="5dp"
       android:id="@+id/layout_city"
       android:layout_below="@id/iv2"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:gravity="center_vertical"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="所在地区:"
           android:textSize="20sp"
           />
      <Spinner
          android:id="@+id/spinner"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:entries="@array/area"
          />
   </LinearLayout>
    <View
        android:id="@+id/iv3"
        android:layout_below="@id/layout_city"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#c4bfbf"/>
   <LinearLayout
       android:gravity="center_vertical"
       android:id="@+id/layout_address"
       android:layout_below="@id/iv3"
       android:layout_width="match_parent"
       android:layout_height="50dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="街道地址"
           android:textSize="20sp"
           />
       <EditText
           android:id="@+id/ed_address"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="实兴大街"
           android:textSize="20sp"
           />
   </LinearLayout>
    <View
        android:id="@+id/iv4"
        android:layout_below="@id/layout_address"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#c4bfbf"/>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_cart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_cart_buy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/main_orange"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="结算"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="合计：￥0"
            android:textColor="#f90"
            android:layout_marginRight="10dp"
           android:gravity="center"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/tv_cart_buy" />
    </RelativeLayout>

</RelativeLayout>
